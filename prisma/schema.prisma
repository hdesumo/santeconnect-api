generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  full_name     String
  email         String   @unique
  password_hash String   @map("password_hash")
  phone         String?
  role          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
